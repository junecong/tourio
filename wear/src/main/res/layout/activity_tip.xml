<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tourio.eklrew.tourio.TipActivity"
    android:orientation="vertical"
    android:background="#515151">


    <LinearLayout
        android:id="@+id/tip_layout_1"
        android:layout_marginTop="-60dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="0.3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"/>

        <NumberPicker
            android:id="@+id/tip_numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center">
        </NumberPicker>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tip_layout_1"
        android:layout_marginTop="-70dp">

        <TextView
            android:id="@+id/tip_text"
            android:gravity="center"
            android:text="We hope you enjoyed your tour!\nTip your tour creator?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <Button
        android:text="Tip!"
        android:layout_below="@id/tip_text"
        android:layout_width="80dp"
        android:background="#FF6344"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:id="@+id/tip_button"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:onClick="onClickTip"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"/>

</LinearLayout>
