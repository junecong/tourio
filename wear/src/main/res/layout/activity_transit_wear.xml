<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/transit_wear_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/heading_to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heading_to_text"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/transit_wear_layout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/transit_wear_layout_1"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_map"
            android:textAllCaps="false"
            android:onClick="viewMap"/>

        <Button
            android:id="@+id/transit_skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip_this_stop"
            android:textAllCaps="false"
            android:onClick="skipUpcomingStop"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/map_button"/>
    </RelativeLayout>

</RelativeLayout>